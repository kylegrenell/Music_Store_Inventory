<div class="content">

  <h2>Edit Sales</h2>

  <form action="/sales/<%= @sale.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= @sale.name %>"><br>
    
    <select name="artist_id">
        <% @instruments.each do |instrument| %>
          <option value="<%= instrument.id %>" <%= 'selected' if @sale.instrument.id == instrument.id %>><%= instrument.name %></option>    
        <%  end %>
    </select>

    <input type='submit' value="Update Sales">
  </form>

</div>